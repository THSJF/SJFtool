<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/send_dynamicRelativeLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/send_dynamicLinearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_alignParentBottom="true">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<Spinner
				android:id="@+id/send_dynamicSpinner_account"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="2"/>

			<Button
				android:id="@+id/send_dynamicButton_pic"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="选择图片"
				android:layout_weight="1.0"
				android:layout_gravity="center"/>

			<Button
				android:id="@+id/send_dynamicButton_send"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="发送"
				android:layout_weight="1.0"
				android:layout_gravity="center"/>

		</LinearLayout>

	</LinearLayout>

	<EditText
		android:id="@+id/send_dynamicEditText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/send_dynamicLinearLayout"/>

	<ListView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/send_dynamicListView"
		android:layout_alignParentTop="true"
		android:layout_above="@id/send_dynamicEditText"/>

</RelativeLayout>

